<h2>Follow Users</h2>
<% if @users.exists? %>
<table class='table'>
   <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
     <tr>
      <% @users.each do |user| %>
      <div class="one-post card w-100">
        <%= link_to user_path(user) do %>
          <td><%= image_tag user.get_profile_image, size: '50x50', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %></td>
          <td><%= user.name %></td>
          <%= link_to follows_user_path(user) do %>
          <td>フォロー数<%= user.following_user.count %></td>
          <% end %>
          <%= link_to followers_user_path(user) do %>
          <td>フォロワー数<%= user.follower_user.count %></td>
          <% end %>
          <td><%= link_to 'Show', user %></td>
      </tr>
      </tbody>
     </div>
        <% end %>
      <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>